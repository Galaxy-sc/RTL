{
  "name": "راست‌چین",
  "description": "با این افزونه سایت رو راست‌چین و چپ‌چین کن",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "روش کلیک کن تا راست‌چین یا چپ‌چین بشه",
    "default_icon": {
      "16": "favicon16.png",
      "32": "favicon32.png"
    }
  },
  "icons": {
    "16": "favicon16.png",
    "32": "favicon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  }
}